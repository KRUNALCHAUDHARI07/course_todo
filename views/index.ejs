              <td class="pt-3"><%= course[i].name %></td>
              <td class="pt-3"><%= course[i].duration %></td>
              <td class="pt-3"><%= course[i].fees %></td>
              <td>
              <form action="/addcoursepage/<%= course[i]._id %>">
                <button type="submit" class="btn btn-warning">Edit</button>          
              </form>
              
              <form action="/deletecourse/<%= course[i]._id %>">
                <td><button class="btn btn-danger">Delete</button></td>
              </form>
            </tr>  
        <%} %>
        
      </tbody>
    </table>
    
